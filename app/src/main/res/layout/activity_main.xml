<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:foregroundGravity="center"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#E3E3E3"
        android:onClick="onClick"
        android:orientation="vertical">

        <TextView
            android:id="@+id/MainText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="50dp"
            android:backgroundTint="#E3E3E3"
            android:backgroundTintMode="add"
            android:text="Справочник авиакомпаний"
            android:textAlignment="center"
            android:textColor="#232323"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="413dp"
            android:layout_height="253dp"
            android:layout_marginBottom="4dp"
            android:alpha="0.1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/plane" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#272727"
        app:cardCornerRadius="0dp">

        <ScrollView
            android:id="@+id/menu"
            android:layout_width="300dp"
            android:layout_height="720dp"
            android:layout_marginRight="15dp">

            <LinearLayout
                android:id="@+id/vertical_container"
                android:layout_width="match_parent"
                android:layout_marginRight="10dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="15dp"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">


                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:background="#D5D5D5"
                    android:backgroundTint="#181818"
                    android:gravity="center_horizontal|center_vertical"
                    app:cardCornerRadius="50dp">

                    <LinearLayout
                        android:id="@+id/row1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:onClick="onClick"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageView5"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="10dp"
                            android:layout_weight="0"
                            android:scaleType="fitCenter"

                            app:srcCompat="@drawable/plane" />

                        <TextView
                            android:id="@+id/textView11"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="30dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="Введение"
                            android:textColor="#D8D8D8"
                            android:textSize="25dp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="25dp"
                    android:background="#D5D5D5"
                    android:backgroundTint="#181818"
                    android:gravity="center_horizontal|center_vertical"
                    app:cardCornerRadius="50dp">

                    <LinearLayout
                        android:id="@+id/row2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:onClick="onClick"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageView6"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="0"
                            android:scaleType="fitCenter"
                            app:srcCompat="@drawable/aflt" />

                        <TextView
                            android:id="@+id/textView12"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="20dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="Аэрофлот"
                            android:textColor="#D8D8D8"
                            android:textSize="25dp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="25dp"
                    android:background="#D5D5D5"
                    android:backgroundTint="#181818"
                    android:gravity="center_horizontal|center_vertical"
                    app:cardCornerRadius="50dp">

                    <LinearLayout
                        android:id="@+id/row3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:onClick="onClick"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageView7"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="10dp"
                            android:layout_weight="0"
                            android:scaleType="fitCenter"
                            app:srcCompat="@drawable/s7" />

                        <TextView
                            android:id="@+id/textView14"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="30dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="S7"
                            android:textColor="#D8D8D8"
                            android:textSize="25dp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="25dp"
                    android:background="#D5D5D5"
                    android:backgroundTint="#181818"
                    android:gravity="center_horizontal|center_vertical"
                    app:cardCornerRadius="50dp">

                    <LinearLayout
                        android:id="@+id/row4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:onClick="onClick"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageView8"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="10dp"
                            android:layout_weight="0"
                            android:scaleType="fitCenter"
                            app:srcCompat="@drawable/alrs" />

                        <TextView
                            android:id="@+id/textView15"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="30dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="АЛРОСА"
                            android:textColor="#D8D8D8"
                            android:textSize="25dp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="25dp"
                    android:background="#D5D5D5"
                    android:backgroundTint="#181818"
                    android:gravity="center_horizontal|center_vertical"
                    app:cardCornerRadius="50dp">

                    <LinearLayout
                        android:id="@+id/row5"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:onClick="onClick"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageView10"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="10dp"
                            android:layout_weight="0"
                            android:scaleType="fitCenter"
                            app:srcCompat="@drawable/pobeda" />

                        <TextView
                            android:id="@+id/textView16"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="30dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="Победа"
                            android:textColor="#D8D8D8"
                            android:textSize="25dp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="25dp"
                    android:background="#D5D5D5"
                    android:backgroundTint="#181818"
                    android:gravity="center_horizontal|center_vertical"
                    app:cardCornerRadius="50dp">

                    <LinearLayout
                        android:id="@+id/row6"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:onClick="onClick"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageView11"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="10dp"
                            android:layout_weight="0"
                            android:scaleType="fitCenter"
                            app:srcCompat="@drawable/rwngs" />

                        <TextView
                            android:id="@+id/textView17"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="30dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="RedWings"
                            android:textColor="#D8D8D8"
                            android:textSize="25dp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="25dp"
                    android:background="#D5D5D5"
                    android:backgroundTint="#181818"
                    android:gravity="center_horizontal|center_vertical"
                    app:cardCornerRadius="50dp">

                    <LinearLayout
                        android:id="@+id/row7"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:onClick="onClick"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageView12"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="10dp"
                            android:layout_weight="0"
                            android:scaleType="fitCenter"
                            app:srcCompat="@drawable/angr" />

                        <TextView
                            android:id="@+id/textView18"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="30dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="Ангара"
                            android:textColor="#D8D8D8"
                            android:textSize="25dp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="25dp"
                    android:background="#D5D5D5"
                    android:backgroundTint="#181818"
                    android:gravity="center_horizontal|center_vertical"
                    app:cardCornerRadius="50dp">

                    <LinearLayout
                        android:id="@+id/row8"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:onClick="onClick"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageView13"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="10dp"
                            android:layout_weight="0"
                            android:scaleType="fitCenter"
                            app:srcCompat="@drawable/agsz" />

                        <TextView
                            android:id="@+id/textView19"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="30dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="Газпромавиа"
                            android:textColor="#D8D8D8"
                            android:textSize="25dp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>



            </LinearLayout>
        </ScrollView>
    </androidx.cardview.widget.CardView>

</androidx.drawerlayout.widget.DrawerLayout>